@model IDictionary<string, string?>
@{
    ViewData["Title"] = "Luxtak Configuration";
}

<div class="container py-4">
    <form asp-action="SaveLuxtak" asp-controller="Config" method="post" class="config-form">
        @Html.AntiForgeryToken()
        <div class="d-flex align-items-center justify-content-between mb-3">
            <a asp-controller="Config" asp-action="Index" class="btn btn-outline-secondary">← Back</a>
            <h1 class="h4 m-0">Luxtak Configuration</h1>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

        @if (TempData["Saved"] != null) { <div class="alert alert-success">Configuration saved.</div> }

        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <h6 class="text-uppercase text-muted mb-3">Credentials</h6>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">AppId</label>
                        <input class="form-control" name="Luxtak:AppId" value="@(Model.ContainsKey("Luxtak:AppId") ? Model["Luxtak:AppId"] : null)" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">AuthToken (Basic)</label>
                        <textarea class="form-control" name="Luxtak:AuthToken" rows="3" style="font-family: monospace; white-space: pre;">@(Model.ContainsKey("Luxtak:AuthToken") ? Model["Luxtak:AuthToken"] : null)</textarea>
                    </div>
                </div>

                <hr class="my-4" />
                <h6 class="text-uppercase text-muted mb-3">API</h6>
                <div class="row g-3">
                    <div class="col-12">
                        <label class="form-label">Endpoint</label>
                        <input class="form-control" name="Luxtak:Endpoint" value="@(Model.ContainsKey("Luxtak:Endpoint") ? Model["Luxtak:Endpoint"] : null)" />
                    </div>
                </div>

                <hr class="my-4" />
                <h6 class="text-uppercase text-muted mb-3">Routing</h6>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">NotifyUrl</label>
                        <input class="form-control" name="Luxtak:NotifyUrl" value="@(Model.ContainsKey("Luxtak:NotifyUrl") ? Model["Luxtak:NotifyUrl"] : null)" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">ReturnUrl</label>
                        <input class="form-control" name="Luxtak:ReturnUrl" value="@(Model.ContainsKey("Luxtak:ReturnUrl") ? Model["Luxtak:ReturnUrl"] : null)" />
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a asp-controller="Config" asp-action="Index" class="btn btn-outline-secondary">← Back</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
