@model IDictionary<string, string?>
@{
    ViewData["Title"] = "Smilepayz Configuration";
}

<div class="container py-4">
    <form asp-action="SaveSmilepayz" asp-controller="Config" method="post" class="config-form">
        @Html.AntiForgeryToken()
        <div class="d-flex align-items-center justify-content-between mb-3">
            <a asp-controller="Config" asp-action="Index" class="btn btn-outline-secondary">← Back</a>
            <h1 class="h4 m-0">Smilepayz Configuration</h1>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

        @if (TempData["Saved"] != null)
        {
            <div class="alert alert-success">Configuration saved.</div>
        }

        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <h6 class="text-uppercase text-muted mb-3">Credentials</h6>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">PartnerId</label>
                        <input class="form-control" name="Smilepayz:PartnerId" value="@(Model.ContainsKey("Smilepayz:PartnerId") ? Model["Smilepayz:PartnerId"] : null)" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">MerchantSecret</label>
                        <input class="form-control" name="Smilepayz:MerchantSecret" value="@(Model.ContainsKey("Smilepayz:MerchantSecret") ? Model["Smilepayz:MerchantSecret"] : null)" />
                    </div>
                    <div class="col-12">
                        <label class="form-label">Endpoint</label>
                        <input class="form-control" name="Smilepayz:Endpoint" value="@(Model.ContainsKey("Smilepayz:Endpoint") ? Model["Smilepayz:Endpoint"] : null)" />
                    </div>
                </div>

                <hr class="my-4" />
                <h6 class="text-uppercase text-muted mb-3">Keys</h6>
                <div class="mb-3">
                    <label class="form-label">RSAPublicKey</label>
                    <textarea class="form-control" name="Smilepayz:RSAPublicKey" rows="8">@(Model.ContainsKey("Smilepayz:RSAPublicKey") ? Model["Smilepayz:RSAPublicKey"] : null)</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">RSAPrivateKey</label>
                    <textarea class="form-control" name="Smilepayz:RSAPrivateKey" rows="14">@(Model.ContainsKey("Smilepayz:RSAPrivateKey") ? Model["Smilepayz:RSAPrivateKey"] : null)</textarea>
                </div>

                <hr class="my-4" />
                <h6 class="text-uppercase text-muted mb-3">Routing</h6>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">RedirectUrl</label>
                        <input class="form-control" name="Smilepayz:RedirectUrl" value="@(Model.ContainsKey("Smilepayz:RedirectUrl") ? Model["Smilepayz:RedirectUrl"] : null)" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">CallbackUrl</label>
                        <input class="form-control" name="Smilepayz:CallbackUrl" value="@(Model.ContainsKey("Smilepayz:CallbackUrl") ? Model["Smilepayz:CallbackUrl"] : null)" />
                    </div>
                </div>

                <hr class="my-4" />
                <h6 class="text-uppercase text-muted mb-3">Defaults</h6>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">PaymentMethod</label>
                        <input class="form-control" name="Smilepayz:PaymentMethod" value="@(Model.ContainsKey("Smilepayz:PaymentMethod") ? Model["Smilepayz:PaymentMethod"] : null)" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Currency</label>
                        <input class="form-control" name="Smilepayz:Currency" value="@(Model.ContainsKey("Smilepayz:Currency") ? Model["Smilepayz:Currency"] : null)" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">MerchantName</label>
                        <input class="form-control" name="Smilepayz:MerchantName" value="@(Model.ContainsKey("Smilepayz:MerchantName") ? Model["Smilepayz:MerchantName"] : null)" />
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a asp-controller="Config" asp-action="Index" class="btn btn-outline-secondary">← Back</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
