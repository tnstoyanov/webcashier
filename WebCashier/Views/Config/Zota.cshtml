@model IDictionary<string,string?>
@{
    ViewData["Title"] = "Zota MG APMs Config";
}
<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <a asp-controller="Config" asp-action="Index" class="btn btn-outline-secondary">‚Üê Back</a>
        <h1 class="h4 m-0">Zota MG APMs</h1>
        <span></span>
    </div>

    @if (TempData["Saved"] != null) {
        <div class="alert alert-success">Saved.</div>
    }

    <form asp-action="SaveZota" method="post" class="card p-3 shadow-sm">
        @Html.AntiForgeryToken()
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">EndpointID</label>
                <input class="form-control" name="Zota:EndpointID" value="@(Model.ContainsKey("Zota:EndpointID") ? Model["Zota:EndpointID"] : null)" />
            </div>
            <div class="col-md-6">
                <label class="form-label">MerchantSecretKey</label>
                <input class="form-control" name="Zota:MerchantSecretKey" value="@(Model.ContainsKey("Zota:MerchantSecretKey") ? Model["Zota:MerchantSecretKey"] : null)" />
            </div>
            <div class="col-md-6">
                <label class="form-label">orderCurrency</label>
                <input class="form-control" name="Zota:orderCurrency" value="@(Model.ContainsKey("Zota:orderCurrency") ? Model["Zota:orderCurrency"] : null)" placeholder="EUR" />
            </div>
            <div class="col-md-6">
                <label class="form-label">CustomerEmail</label>
                <input class="form-control" name="Zota:CustomerEmail" value="@(Model.ContainsKey("Zota:CustomerEmail") ? Model["Zota:CustomerEmail"] : null)" placeholder="demo@example.com" />
            </div>
            <div class="col-md-6">
                <label class="form-label">RedirectUrl</label>
                <input class="form-control" name="Zota:RedirectUrl" value="@(Model.ContainsKey("Zota:RedirectUrl") ? Model["Zota:RedirectUrl"] : null)" placeholder="https://webcashier.onrender.com/Zota/Return" />
            </div>
            <div class="col-md-6">
                <label class="form-label">CallbackUrl</label>
                <input class="form-control" name="Zota:CallbackUrl" value="@(Model.ContainsKey("Zota:CallbackUrl") ? Model["Zota:CallbackUrl"] : null)" placeholder="https://webcashier.onrender.com/Zota/Callback" />
            </div>
            <div class="col-md-6">
                <label class="form-label">CheckoutUrl</label>
                <input class="form-control" name="Zota:CheckoutUrl" value="@(Model.ContainsKey("Zota:CheckoutUrl") ? Model["Zota:CheckoutUrl"] : null)" placeholder="https://webcashier.onrender.com/Payment" />
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
