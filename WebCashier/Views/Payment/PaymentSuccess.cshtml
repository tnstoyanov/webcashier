@model WebCashier.Models.PaymentReturnModel

@{
    ViewData["Title"] = "Payment Successful";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="payment-result-container">
    <div class="payment-result-header">
        <div class="logo-container">
            <h2 class="logo">Xcite</h2>
        </div>
    </div>

    <div class="payment-result-content">
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        
        <h1 class="result-title success">Payment Successful!</h1>
        <p class="result-message">Your payment has been processed successfully.</p>

        <div class="transaction-details">
            <h3>Transaction Details</h3>
            @if (!string.IsNullOrEmpty(Model.OrderId))
            {
                <div class="detail-row">
                    <span class="detail-label">Order ID:</span>
                    <span class="detail-value">@Model.OrderId</span>
                </div>
            }
            <div class="detail-row">
                <span class="detail-label">Payment Method:</span>
                <span class="detail-value">@Model.PaymentMethod</span>
            </div>
            @if (!string.IsNullOrEmpty(Model.PaymentProcessor))
            {
                <div class="detail-row">
                    <span class="detail-label">Payment Processor:</span>
                    <span class="detail-value">@Model.PaymentProcessor</span>
                </div>
            }
            <div class="detail-row">
                <span class="detail-label">Status:</span>
                <span class="detail-value status-approved">@Model.TransactionStatus</span>
            </div>
            @if (!string.IsNullOrEmpty(Model.Currency))
            {
                <div class="detail-row">
                    <span class="detail-label">Currency:</span>
                    <span class="detail-value">@Model.Currency</span>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Amount))
            {
                <div class="detail-row">
                    <span class="detail-label">Amount:</span>
                    <span class="detail-value">@Model.Amount @Model.Currency</span>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.CardType))
            {
                <div class="detail-row">
                    <span class="detail-label">Card Type:</span>
                    <span class="detail-value">@Model.CardType</span>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.CardNumber))
            {
                <div class="detail-row">
                    <span class="detail-label">Card Number:</span>
                    <span class="detail-value">@Model.CardNumber</span>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.AuthorizationCode))
            {
                <div class="detail-row">
                    <span class="detail-label">Authorization Code:</span>
                    <span class="detail-value">@Model.AuthorizationCode</span>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Reference))
            {
                <div class="detail-row">
                    <span class="detail-label">Reference:</span>
                    <span class="detail-value">@Model.Reference</span>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.StatusCode))
            {
                <div class="detail-row">
                    <span class="detail-label">Status Code:</span>
                    <span class="detail-value">@Model.StatusCode</span>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.StatusDetails))
            {
                <div class="detail-row">
                    <span class="detail-label">Status Details:</span>
                    <span class="detail-value">@Model.StatusDetails</span>
                </div>
            }
        </div>

        <div class="action-buttons">
            <a href="/" class="btn btn-primary">Return to Platform</a>
            <button onclick="window.print()" class="btn btn-secondary">Print Receipt</button>
        </div>
    </div>
</div>

<style>
    .payment-result-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    .payment-result-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .logo {
        color: #2c3e50;
        font-size: 24px;
        font-weight: bold;
        margin: 0;
    }

    .payment-result-content {
        text-align: center;
    }

    .success-icon {
        font-size: 64px;
        color: #27ae60;
        margin-bottom: 20px;
    }

    .result-title {
        font-size: 32px;
        margin: 20px 0;
        font-weight: bold;
    }

    .result-title.success {
        color: #27ae60;
    }

    .result-message {
        font-size: 18px;
        color: #666;
        margin-bottom: 30px;
    }

    .transaction-details {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
        margin: 20px 0;
        text-align: left;
    }

    .transaction-details h3 {
        margin-top: 0;
        color: #2c3e50;
        border-bottom: 2px solid #3498db;
        padding-bottom: 10px;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid #eee;
    }

    .detail-row:last-child {
        border-bottom: none;
    }

    .detail-label {
        font-weight: bold;
        color: #555;
    }

    .detail-value {
        color: #333;
    }

    .status-approved {
        color: #27ae60;
        font-weight: bold;
        text-transform: uppercase;
    }

    .action-buttons {
        margin-top: 30px;
    }

    .btn {
        display: inline-block;
        padding: 12px 24px;
        margin: 0 10px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #3498db;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2980b9;
    }

    .btn-secondary {
        background-color: #95a5a6;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #7f8c8d;
    }
</style>