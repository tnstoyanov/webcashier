@model WebCashier.Models.PaymentReturnModel

@{
    ViewData["Title"] = "Payment Pending - Luxtak";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="payment-container">
    <div class="payment-header">
        <div class="logo-container">
            <img class="logo" src="https://xcite.platform.thexcite.com/resources/svg/trading_logo.svg" alt="zenstox logo" />
            <a href="/" class="back-link">Back to platform</a>
        </div>
    </div>

    <div class="payment-content">
        <div class="result-card luxtak-pending">
            <div class="pending-icon">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="12" r="10" fill="#f59e0b"/>
                    <path d="M12 6v6l4 2" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <div class="progress-indicator">
                    <div class="progress-dots">
                        <span class="dot"></span>
                        <span class="dot"></span>
                        <span class="dot"></span>
                    </div>
                    <div class="progress-text">⏳</div>
                </div>
            </div>
            
            <h1 class="result-title">Your payment is still in progress</h1>
            <p class="result-message">Your payment is still in progress. If it gets approved, you balance will update automatically.</p>
            
            <div class="payment-summary">
                <div class="summary-row">
                    <span class="summary-label">Transaction ID:</span>
                    <span class="summary-value">@Model.TransactionId</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Amount:</span>
                    <span class="summary-value">@Model.Currency @Model.Amount</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Payment Method:</span>
                    <span class="summary-value">@Model.PaymentMethod</span>
                </div>
                <div class="summary-row">
                    <span class="summary-label">Status:</span>
                    <span class="summary-value pending-status">@Model.TransactionStatus</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.OrderId))
                {
                    <div class="summary-row">
                        <span class="summary-label">Order ID:</span>
                        <span class="summary-value">@Model.OrderId</span>
                    </div>
                }
            </div>
            
            <div class="status-message">
                <p><strong>What happens next?</strong></p>
                <ul>
                    <li>We will process your payment through Luxtak</li>
                    <li>You will receive confirmation once processing is complete</li>
                    <li>This typically takes 2-5 minutes</li>
                </ul>
            </div>
            
            <div class="luxtak-branding">
                <img src="~/images/luxtak-logo.svg" alt="Luxtak" width="120" />
                <p class="branding-text">Payment processing in progress</p>
            </div>

            <div class="action-buttons">
                <a href="/" class="btn btn-primary">Back to Platform</a>
                <button onclick="location.reload()" class="btn btn-secondary">Refresh Status</button>
            </div>
        </div>
    </div>
</div>

<style>
.luxtak-pending {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    color: white;
    text-align: center;
    padding: 3rem;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    margin: 2rem auto;
}

.pending-icon {
    margin-bottom: 2rem;
    position: relative;
}

.progress-indicator {
    position: absolute;
    bottom: -20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
}

.progress-dots {
    display: flex;
    gap: 4px;
}

.dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.6);
    animation: blink 1.5s ease-in-out infinite;
}

.dot:nth-child(2) {
    animation-delay: 0.3s;
}

.dot:nth-child(3) {
    animation-delay: 0.6s;
}

.progress-text {
    font-size: 16px;
    animation: rotate 3s linear infinite;
}

@@keyframes blink {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 1; }
}

@@keyframes rotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.result-title {
    color: white;
    margin-bottom: 1rem;
    font-size: 2.2rem;
    font-weight: 700;
}

.result-message {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2.5rem;
    font-size: 1.2rem;
}

.payment-summary {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 2rem;
    margin-bottom: 2rem;
    text-align: left;
}

.summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding-bottom: 0.8rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.summary-row:last-child {
    margin-bottom: 0;
    border-bottom: none;
    padding-bottom: 0;
}

.summary-label {
    color: rgba(255, 255, 255, 0.8);
    font-weight: 500;
    font-size: 1rem;
}

.summary-value {
    color: white;
    font-weight: 600;
    font-size: 1rem;
}

.pending-status {
    color: #fbbf24;
    text-transform: uppercase;
    font-weight: 700;
}

.status-message {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    text-align: left;
}

.status-message p {
    margin-bottom: 1rem;
    font-weight: 600;
}

.status-message ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.status-message li {
    margin-bottom: 0.5rem;
    position: relative;
    padding-left: 1.5rem;
    color: rgba(255, 255, 255, 0.9);
}

.status-message li:before {
    content: "•";
    position: absolute;
    left: 0;
    color: #fbbf24;
    font-weight: bold;
}

.luxtak-branding {
    margin: 2rem 0;
    padding: 2rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.branding-text {
    color: rgba(255, 255, 255, 0.8);
    margin-top: 0.5rem;
    font-size: 0.9rem;
}

.action-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
}

.btn {
    padding: 0.8rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-primary {
    background: white;
    color: #f59e0b;
}

.btn-primary:hover {
    background: #f3f4f6;
    transform: translateY(-2px);
}

.btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.5);
}

.btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: white;
}
</style>
