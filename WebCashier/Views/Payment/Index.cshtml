        // Carousel navigation function
        function moveCarousel(direction) {
            const carousel = document.querySelector('.method-carousel');
            const track = document.querySelector('.carousel-track');
            const items = document.querySelectorAll('.carousel-item');
            const itemWidth = items[0].offsetWidth + 20; // Add gap
            
            if (!carousel.currentPosition) {
                carousel.currentPosition = 0;
            }
            
            const maxPosition = -(items.length - 3) * itemWidth; // Show 3 items at once
            
            carousel.currentPosition += direction * itemWidth;
            
            // Boundary checks
            if (carousel.currentPosition > 0) {
                carousel.currentPosition = 0;
            }
            if (carousel.currentPosition < maxPosition) {
                carousel.currentPosition = maxPosition;
            }
            
            track.style.transform = `translateX(${carousel.currentPosition}px)`;
        }
