@{
    ViewData["Title"] = "Nuvei Error";
}
<div class="container py-5">
    <h1 class="h3">Payment Failed</h1>
    <p>There was a problem processing your Google Pay Nuvei transaction.</p>
    <hr />
    <h2 class="h5 mt-4">Callback Details</h2>
    <div class="table-responsive">
        <table class="table table-sm table-bordered align-middle">
            <thead class="table-light">
                <tr><th>Parameter</th><th>Value</th></tr>
            </thead>
            <tbody>
@{
    string[] keys = { "Status","merchant_unique_id","errApmCode","errScCode","errApmDescription","errScDescription","Reason","ReasonCode","customData","total_amount","currency","TransactionID","cardBrand","issuerName" };
    foreach (var k in keys)
    {
        var v = Context.Request.Query[k].ToString();
        if (!string.IsNullOrEmpty(v)) {
            <tr><td>@k</td><td>@v</td></tr>;
        }
    }
}
            </tbody>
        </table>
    </div>
    <a href="/Payment?paymentMethod=gpay" class="btn btn-secondary mt-3">Try Again</a>
</div>
