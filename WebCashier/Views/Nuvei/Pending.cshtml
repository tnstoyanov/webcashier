@{
    ViewData["Title"] = "Nuvei Pending";
    var paymentMethod = Context.Request.Query["payment_method"].FirstOrDefault() ?? "Google Pay";
    var methodLabel = paymentMethod.Contains("Apple", StringComparison.OrdinalIgnoreCase) ? "Apple Pay" : "Google Pay";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <script>
        // Break out of iframe if loaded inside one
        // This happens when Nuvei redirects to Success/Error/Pending within the Apple Pay iframe
        (function() {
            try {
                // Check if we're inside an iframe
                if (window.self !== window.top) {
                    console.log('[Nuvei Pending] Detected iframe. Breaking out and navigating parent window.');
                    // Build the current URL to navigate the parent window
                    var currentUrl = window.location.href;
                    // Navigate the parent (entire browser window) to this URL
                    window.top.location.href = currentUrl;
                }
            } catch (e) {
                console.error('[Nuvei Pending] Error checking iframe:', e);
                // Proceed normally if there's any error
            }
        })();
    </script>
    <div class="container py-5">
        <h1 class="h3">Payment Pending</h1>
        <p>Your @methodLabel Nuvei transaction is still processing. You will be notified once completed.</p>
        <a href="/Payment?paymentMethod=@(paymentMethod.Contains("Apple", StringComparison.OrdinalIgnoreCase) ? "apple-pay-nuvei" : "gpay")" class="btn btn-outline-secondary">Back</a>
    </div>
</body>
</html>
